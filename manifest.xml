<?xml version="1.0" encoding="UTF-8"?>
<manifest>

<!-- Fetching Sources -->

        <remote name="Stable-Stuffs"
                fetch="https://github.com/Stable-Stuffs" />

        <remote name="ImSurajxD" 
                fetch="https://gitlab.com/ImSurajxD" />
       
<!-- Device Trees -->

        <project path="device/xiaomi/lavender" name="android_device_xiaomi_lavender" remote="Stable-Stuffs" revision="12L" />
        <project path="vendor/xiaomi/lavender" name="android_vendor_xiaomi_lavender" remote="Stable-Stuffs" revision="12L" />
        <project path="kernel/xiaomi/lavender" name="android_kernel_xiaomi_lavender" remote="Stable-Stuffs" revision="12L" clone-depth="1" />
        
<!-- Replacement -->

        <remove-project name="vendor_aosp" />
        <project path="vendor/aosp" name="vendor_aosp" remote="Stable-Stuffs" revision="twelve-plus" />

        <remove-project name="build" />
        <project path="build/make" name="build" remote="Stable-Stuffs" revision="twelve" groups="pdk" >
        <copyfile src="core/root.mk" dest="Makefile" />
        <linkfile src="CleanSpec.mk" dest="build/CleanSpec.mk" />
        <linkfile src="buildspec.mk.default" dest="build/buildspec.mk.default" />
        <linkfile src="core" dest="build/core" />
        <linkfile src="envsetup.sh" dest="build/envsetup.sh" />
        <linkfile src="target" dest="build/target" />
        <linkfile src="tools" dest="build/tools" />
        </project>

<!-- Extra's -->

        <project path="packages/apps/android" name="packages_apps_android" remote="ImSurajxD" revision="Master" />

</manifest>
